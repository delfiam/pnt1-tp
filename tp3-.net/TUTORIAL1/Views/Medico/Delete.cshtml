@model TUTORIAL1.Models.Medico

@{
    ViewData["Title"] = "Delete";
}



<div>
    <h1>Eliminar registro</h1>
    <br />
    <hr />
    <br />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dni):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dni)
        </dd>
        <dt class="col-sm-2">
            Nombre Completo:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreCompleto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Especialidad):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Especialidad)
        </dd>
        
        <dd>
            <br />
            <form asp-action="Delete" style="display: inline-block;">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Eliminar" class="btn" style="background-color: #dc3545; color: white; border: none; width: 150px; height: 50px; font-size: 16px; margin-right: 10px;" />
                <a asp-action="Index" class="btn btn-secondary" style="width: 150px; height: 50px; font-size: 16px; text-align: center; display: inline-flex; align-items: center; justify-content: center;">Volver</a>
            </form>
        </dd>
    </dl>
    <br />
</div>


