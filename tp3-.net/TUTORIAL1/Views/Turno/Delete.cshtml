@model TUTORIAL1.Models.Turno

@{
    ViewData["Title"] = "Eliminar";
}



<div class=" items-center justify-center">

    <div class=" p-12 bg-white border border-gray-200 rounded-lg shadow">
    <dl class="row">
        <dt class = "col-sm-2">
            Fecha y hora:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaHora)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Medico):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Medico.Dni)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Paciente):
        </dt>
        <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Paciente.NombreCompleto)
            </dd>
        <dd>
            <br />
            <form asp-action="Delete" style="display: inline-block;">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Eliminar" class="btn" style="background-color: #dc3545; color: white; border: none; width: 150px; height: 50px; font-size: 16px; margin-right: 10px;" /> 
                <a asp-action="Index" class="btn btn-secondary" style="width: 150px; height: 50px; font-size: 16px; text-align: center; display: inline-flex; align-items: center; justify-content: center;">Volver</a>
            </form>
        </dd>
    </dl>
    </div>
    
</div>
