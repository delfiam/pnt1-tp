@model TUTORIAL1.Models.Turno

@{
    ViewData["Title"] = "Create";
}

<h1>Crear turno</h1>
<br />
<hr />
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" class="max-w-sm mx-auto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FechaHora" class="control-label block mb-2 text-sm font-medium text-gray-900">Fecha y hora</label>
                <input asp-for="FechaHora" class="form-control bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" />
                <span asp-validation-for="FechaHora" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Medico" class="control-label block mb-2 text-sm font-medium text-gray-900"></label>
                <select asp-for="MedicoId" class="form-control bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" asp-items="ViewBag.MedicoNombre"></select>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Paciente" class="control-label block mb-2 text-sm font-medium text-gray-900"></label>
                <select asp-for="PacienteId" class="form-control bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" asp-items="ViewBag.PacienteNombre"></select>
            </div>
            <br />
            <div class="form-group d-flex justify-content-center align-items-center" style="gap: 10px;">
                <input type="submit" value="Agregar" class="btn btn-primary" style="width: 150px; height: 50px; font-size: 16px; text-align: center;" />
                <a asp-action="Index" class="btn btn-secondary" style="width: 150px; height: 50px; font-size: 16px; text-align: center; display: flex; align-items: center; justify-content: center;">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
