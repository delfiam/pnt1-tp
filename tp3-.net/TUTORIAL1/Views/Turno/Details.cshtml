@model TUTORIAL1.Models.Turno

@{
    ViewData["Title"] = "Detalles";
}

<div class=" items-center justify-center" >

<div class=" p-12 bg-white border border-gray-200 rounded-lg shadow">
    <h4>Detalles del turno</h4>
        <br />
    <hr />
        <br />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Medico.Especialidad):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Medico.Especialidad)
        </dd>
        <dt class = "col-sm-2">
          Obra Social:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Paciente.ObraSocial)
        </dd>
        <dt class = "col-sm-2">
                Dni del Médico:
            </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Medico.Dni)
        </dd>
        <dt class="col-sm-2">
            Nombre del Médico:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Medico.NombreCompleto)
        </dd>
        <dt class = "col-sm-2">
           Dni del Paciente:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Paciente.Dni)
        </dd>
        <dt class="col-sm-2">
            Nombre del Paciente:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Paciente.NombreCompleto)
        </dd>
    </dl>
        <div class="grid grid-cols-2 gap-10">

            <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model?.Id">Editar</a>
            <a class="btn btn-primary" asp-action="Index">Volver a la lista</a>
        </div>

</div>
</div>
