@model Especialidad

<form asp-action="FilterByEspecialidad" method="post">
    <div class="form-group">
        <label for="especialidad">Seleccione una Especialidad</label>
        <select id="especialidad" name="especialidad" class="form-control" asp-items="ViewBag.Especialidades"></select>
    </div>
    <button type="submit" class="btn btn-primary">Seleccionar</button>
</form>

