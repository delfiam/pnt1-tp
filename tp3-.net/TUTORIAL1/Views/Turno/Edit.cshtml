@model TUTORIAL1.Models.Turno

@{
    ViewData["Title"] = "Editar";
}
<a asp-action="Index"><</a>
<div class=" p-12 bg-white border border-gray-200 rounded-lg shadow">

<div class="row">
    <div class="col-md-4">
            @if (ViewBag.ErrorMessage != null)
            {
                <p style="color:red;">@ViewBag.ErrorMessage</p>
            }
        <form asp-action="Edit" class="max-w-sm mx-auto">
            
            <div asp-validation-summary="ModelOnly" class="block mb-2 text-sm font-medium text-gray-900"></div>
            <input type="hidden" asp-for="Id" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" />
            <div class="form-group">

                <label asp-for="FechaHora" class="block mb-2 text-sm font-medium text-gray-900">Fecha y Hora</label>
                <input asp-for="FechaHora" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" />
                <span asp-validation-for="FechaHora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medico" class="block mb-2 text-sm font-medium text-gray-900"></label>
                <select asp-for="MedicoId" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" asp-items="ViewBag.MedicoNombre"></select>
            </div>
                <div class="form-group">
                    <label asp-for="Paciente" class="block mb-2 text-sm font-medium text-gray-900"></label>
                    <select asp-for="PacienteId" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" asp-items="ViewBag.PacienteNombre" readonly></select>
                </div>
            <div class="form-group">
                <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
