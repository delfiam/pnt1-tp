@model TUTORIAL1.Models.Paciente

@{
    ViewData["Title"] = "Detalles";
}

<div class=" items-center justify-center">

    <div class=" p-12 bg-white border border-gray-200 rounded-lg shadow">
    <h4>Paciente</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
          DNI
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dni)
        </dd>
        <dt class = "col-sm-2">
           Nombre Completo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreCompleto)
        </dd>
        <dt class = "col-sm-2">
           Obra Social
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ObraSocial)
        </dd>
    </dl>
</div>
    <div class="grid grid-cols-2 gap-10">

        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model?.Id">Editar</a>
        <a class="btn btn-primary" asp-action="Index">Volver a la lista</a>
    </div>

</div>
</div>
